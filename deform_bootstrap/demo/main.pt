<metal:block define-macro="master">
<!DOCTYPE html>
<html tal:define="app_url request.application_url;
                  static app_url + '/static'">

  <head>
    <meta charset="utf-8" />
    <title>
      Deform Bootstrap Demo Site
    </title>

    <link rel="stylesheet" href="${app_url}/pygments.css" type="text/css" />
    <link rel="stylesheet" href="${app_url}/static-deform_bootstrap/bootstrap.min.css" type="text/css" media="screen" charset="utf-8" />

    <!-- Widget requirements -->
    <tal:block repeat="reqt css_links|[]">
      <link rel="stylesheet" href="${static}/${reqt}" type="text/css" />
    </tal:block>
    <tal:block repeat="reqt js_links|[]">
      <script type="text/javascript" src="${static}/${reqt}"></script>
    </tal:block>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  
  <body id="public">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">
            Deform Bootstrap Demo
          </a>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="page-header">
        <h1></h1>
      </div>
      <div class="row">

        <div tal:condition="showmenu" class="span3">
          <ul class="nav nav-list">
            <li tal:repeat="(title, name) demos"><a href="${name}/">${title}</a></li>
          </ul>
        </div>

        <div class="${showmenu and 'span9' or 'span12'}">
          <span metal:define-slot="main"/>
        </div>

      </div>
    </div>

  </body>

</html>
</metal:block>